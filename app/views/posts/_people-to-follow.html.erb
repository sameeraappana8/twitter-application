<h4>People You Might Follow</h4>
	
<% @users.each do | user | %>
	<% if user.username != current_user.username %>
	<%= link_to user do %>
	<div>
		<article class="media">
	<div class="media-left">
	<figure class="img-thumbnail">
	<%= gravatar_image_tag(user.email, size: 64, alt: user.name) %>
	</figure>
</div>
<div class="media-body">
		<bold><%= user.name %> </bold><br />
		<small><%= user.username %></small><br/>
</div>
</article>
</div>
<% end %>
<% end %>
<% end %>